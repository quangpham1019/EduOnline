@model List<Category>

@section title {
    <h3>Categories</h3>
}

@if (Model != null && Model.Count>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><a class="btn btn-link" asp-controller="category" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}